<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/eventsbg"
    tools:context="sep_group_7.SurreyMeets.Events">


    <Button
        android:id="@+id/myevents"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="27dp"
        android:layout_marginTop="11dp"
        android:background="@drawable/buttoncircle"
        android:text="@string/myevents"
        android:textSize="25dp" />

    <Button
        android:id="@+id/upcomingevents"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_alignBottom="@+id/myevents"
        android:layout_alignParentEnd="true"
        android:background="@drawable/buttoncircle"
        android:text="@string/upcoming"
        android:textSize="25dp" />



    <android.support.v7.widget.RecyclerView
        android:id="@+id/myeventlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/order"
        android:layout_alignParentStart="true"
        android:layout_weight="10"
        />
    <TextView
        android:id="@+id/order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/upcomingevents"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="All events are order by number of participants"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginBottom="100dp" />

</RelativeLayout>
