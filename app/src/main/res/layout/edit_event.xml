<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/eventsbg"
    android:fillViewport="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/cv"
            android:layout_width="600dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/linProf"
            android:layout_centerHorizontal="true"
            android:layout_margin="40dp"
            android:layout_marginTop="200dp"
            android:elevation="10dp"
            card_view:cardBackgroundColor="#FFFFFF"
            card_view:cardCornerRadius="15dp"
            card_view:cardElevation="10dp">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/edit_event_back"
                        android:layout_width="60dp"
                        android:padding="2dp"
                        android:layout_height="60dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/arrow" />

                    <ImageView
                        android:id="@+id/save"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/tick"/>
                </RelativeLayout>


                <EditText
                    android:id="@+id/edit_event_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/open_sans_light"
                    android:layout_gravity="center"
                    android:layout_marginTop="24dp"
                    android:text="@string/Name"
                    android:textColor="#646464"
                    android:textSize="30dp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/edit_event_image"
                    android:layout_width="450dp"
                    android:layout_height="280dp"
                    android:layout_below="@+id/edit_event_name"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="31dp"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:id="@+id/edit_event_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/edit_event_image"
                    android:fontFamily="@font/open_sans_light"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:text="@string/viewcategory"
                    android:textColor="#646464"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edit_event_desc"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/edit_event_category"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/open_sans_light"

                    android:layout_gravity="center"
                    android:layout_marginTop="18dp"
                    android:text="@string/desc"
                    android:textColor="#646464"
                    android:textSize="30dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/edit_event_desc"
                        android:layout_alignParentStart="true"
                        android:fontFamily="@font/open_sans_light"
                        android:text="Date and Time:"
                        android:textColor="#646464"
                        android:textSize="30dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/edit_event_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/open_sans_light"
                        android:layout_alignBaseline="@+id/textView11"
                        android:layout_alignBottom="@+id/textView11"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="20dp"
                        android:text="date"
                        android:textAlignment="center"
                        android:textColor="#646464"
                        android:textSize="15dp"
                        android:textStyle="bold" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:fontFamily="@font/open_sans_light"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView11"
                        android:layout_marginTop="27dp"
                        android:text="@string/host"
                        android:textColor="#646464"
                        android:textSize="30dp"
                        android:textStyle="bold" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/edit_event_hostspic"
                        android:layout_width="100px"
                        android:layout_height="100px"
                        android:layout_alignTop="@+id/textView2"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_toEndOf="@+id/edit_event_back"
                        android:clickable="true"
                        android:src="@drawable/profileolan" />

                    <TextView
                        android:id="@+id/textViewpart"
                        android:fontFamily="@font/open_sans_light"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="27dp"
                        android:gravity="right"
                        android:text="@string/participants"
                        android:textColor="#646464"
                        android:textSize="30dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/edit_event_current_participants"
                        android:layout_width="wrap_content"
                        android:fontFamily="@font/open_sans_light"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/textViewpart"
                        android:layout_alignStart="@id/edit_event_participants"
                        android:layout_alignBottom="@+id/textViewpart"
                        android:layout_marginTop="27dp"
                        android:text="0/"
                        android:textColor="#646464"
                        android:textSize="30dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/edit_event_participants"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/edit_event_current_participants"
                        android:layout_alignParentRight="true"
                        android:fontFamily="@font/open_sans_light"
                        android:layout_marginTop="27dp"
                        android:text="0"
                        android:textColor="#646464"
                        android:textSize="30dp"
                        android:textStyle="bold" />

                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/participantphotos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="130dp" />
            </LinearLayout>


        </android.support.v7.widget.CardView>
    </RelativeLayout>
</ScrollView>